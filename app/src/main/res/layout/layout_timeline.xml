<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

    <com.droidsonroids.workcation.common.views.TimelineView
        android:id="@+id/timelineView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tv_color="@android:color/black"
        app:tv_lineThickness="2dp"
        app:tv_outerRadius="2dp"
        app:tv_radius="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/default_layout_margin"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:id="@+id/hour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@id/timelineView"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="12:00 - 13:00"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@id/timelineView"
            android:layout_weight="1"
            android:text="Workation"
            android:textAppearance="@style/RobotoBold"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_very_big"
            android:textStyle="bold"
            />


    </LinearLayout>


</RelativeLayout>
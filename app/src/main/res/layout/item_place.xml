<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <com.droidsonroids.workcation.screens.main.map.DetailsLayout
        android:id="@+id/bali_details_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/place_details_background">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_place_details_height"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/default_layout_margin_halved"
            android:layout_marginStart="@dimen/default_layout_margin_halved"
            android:background="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/headerImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/monkey_forest_1"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textAppearance="@style/RobotoBold"
                    android:textColor="@color/item_place_title"
                    android:textSize="@dimen/textsize_very_huge"
                    android:textStyle="bold"
                    android:transitionName="titleTransition"
                    tools:text="MONKEY FOREST"/>

                <LinearLayout
                    android:id="@+id/descriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/default_layout_margin"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/clock"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_clock"/>

                    <TextView
                        android:id="@+id/hours"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_layout_margin_quartered"
                        android:layout_marginStart="@dimen/default_layout_margin_quartered"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:textAppearance="@style/RobotoMedium"
                        android:textColor="@color/item_place_details_subtitle"
                        android:textSize="@dimen/textsize_big"
                        tools:text="08:30 - 18:00"/>

                    <ImageView
                        android:id="@+id/price_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_price"/>

                    <TextView
                        android:id="@+id/price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_layout_margin_quartered"
                        android:layout_marginStart="@dimen/default_layout_margin_quartered"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:textAppearance="@style/RobotoMedium"
                        android:textColor="@color/item_place_details_subtitle"
                        android:textSize="@dimen/textsize_big"
                        tools:text="40000"/>

                    <ImageView
                        android:id="@+id/scooter"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_scooter"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/default_layout_margin_quartered"
                        android:layout_marginStart="@dimen/default_layout_margin_quartered"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:textAppearance="@style/RobotoMedium"
                        android:textColor="@color/item_place_details_subtitle"
                        android:textSize="@dimen/textsize_big"
                        tools:text="6 min"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:paddingEnd="@dimen/default_layout_margin"
                    android:paddingStart="@dimen/default_layout_margin"
                    android:paddingTop="8dp"
                    android:textAppearance="@style/RobotoThin"
                    android:textColor="@color/item_place_description"
                    tools:text="@string/lorem"/>
            </LinearLayout>

            <Button
                android:id="@+id/takeMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/button_red"
                android:drawableStart="@drawable/ic_near_me_black_24dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="TAKE ME THERE"
                android:textAppearance="@style/RobotoBold"
                android:textColor="@color/white"/>

        </android.support.v7.widget.CardView>


    </com.droidsonroids.workcation.screens.main.map.DetailsLayout>


</layout>
